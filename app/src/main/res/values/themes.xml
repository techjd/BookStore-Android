<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BookStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#989898</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorSurface">#D8FFFFFF</item>

        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="RelativeLayoutStyle" parent="@android:style/Widget">
        <item name="android:background">@drawable/background</item>
    </style>


    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Text</item>

    </style>


    <style name="Text" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">30dp</item>

    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#10B5FF</item>
    </style>

    <style name="textButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">#504F4F</item>
        <item name="boxBackgroundColor">#F9F7F7</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
<!--        <item name="elevation">100dp</item>-->
        <item name="backgroundTint">#00FFFFFF</item>
        <item name="itemRippleColor">#FFFFFF</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
<!--        <item name="rippleColor">@color/white</item>-->
<!--        <item name="colorSurface">#DDF1F9</item>-->
<!--        <item name="backgroundTint">#DDF1F9</item>-->
    </style>

    <style name="AddToCartButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#10B5FF</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/edittext_background_light</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="bottomSheet" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>